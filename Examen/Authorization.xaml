<Window x:Class="Examen.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examen"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="385">
    <Grid>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="36,110,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txt_login" HorizontalAlignment="Left" Margin="85,118,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="28,182,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txt_password" HorizontalAlignment="Left" Margin="85,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Войти" Click="Sign" HorizontalAlignment="Center" Margin="0,265,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
